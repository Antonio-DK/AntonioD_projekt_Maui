<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AntonioD_projekt_Maui.WaveLengthPage"
             Title="Izračun Valne Duljine">

    <VerticalStackLayout 
        Padding="20">
        <Label Text="Unesite frekvenciju (f):"
               FontSize="18"
               Margin="0,20,0,0"/>
        <Entry
            x:Name="FrequencyEntry" 
            Keyboard="Numeric" 
            Placeholder="npr. 50"/>

        <Button Text="Izračunaj valnu duljinu"
                Margin="0,20,0,0"
                Clicked="OnCalculateWaveLengthClicked"/>
        <Label
            x:Name="ResultLabel" 
            FontSize="18" 
            TextColor="Green" 
            Margin="0,20,0,0"/>
    </VerticalStackLayout>
</ContentPage>
